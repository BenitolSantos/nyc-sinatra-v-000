<h2>Create New Figure</h2>
<!-- add content here -->
<form class="" action="/figures" method="post">
  <h2>New Figure Name</h2>
  <input type="text" name="figure[name]" id="figure_name">
  <br>
  <h2>Titles</h2>
  <% Title.all.each do |title| %>
  <input type="radio" name="figure[title_ids][]" value="<%=title.id%>" id="<%=title.id%>"><%= title.name %></input>
  <% end %>
  <h2>Landmarks:</h2>
  <br>
  <% Landmark.all.each do |landmark| %>
  <input type="checklist" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.id%>"><%= landmark.name %></input>
  <% end %>
  <br>
  <h2>Create New Title:</h2>
  <input type="text" name="title[name]"  id="Title Name">
  <h2>Create New Landmark:</h2>
  <label>Name</label>
  <input type="input" name="landmark[name]" id="landmark_name">
    <input type="input" name="landmark[year_completed]" id="landmark_year_completed">
  <input type="submit" name="Create New Figure" value="Create New Figure">
</form>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
