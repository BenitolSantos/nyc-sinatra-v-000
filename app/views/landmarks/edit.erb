<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form class="" action="/landmarks" method="post">
  <h2>Name</h2>
  <input type="text" name="figure[name]" value="Figure Name" id="Name">
  <br>
  <h2>Titles</h2>
  <br>
  <% Title.all.each do |title| %>
  <input type="checkbox" name="title[name]" value="<%=title.name%>" id="<%=title.name%>"><%= title.name %></input>
  <% end %>

  <br>
  <h2>Create New Title:</h2>
  <input type="text" name="Title Name">
  <br>
  <h2>Landmarks</h2>
  <br>
  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="landmark[name]" value="<%=landmark.name%>" id="<%=landmark.name%>"><%= landmark.name %></input>
  <% end %>

  <h2>Create New Landmark:</h2>
  <label>Name</label>
  <input type="input" name="Landmark Name">
  <label>Year</label>
  <input type="input" name="Year Completed">
  <input type="submit" name="Create New Figure" value="Create New Figure">
</form>
<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
